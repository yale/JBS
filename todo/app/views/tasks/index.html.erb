<h1>Inbox</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Notes</th>
    <th>Priority</th>
  </tr>

<% @inbox.each do |task| %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.notes %></td>
    <td><%=h task.priority %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New task', new_task_path %>

<br />

<h2>Completed Tasks</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Notes</th>
    <th>Date Completed</th>
  </tr>

<% @logbook.each do |task| %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.notes %></td>
    <td><%=h task.updated_at %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />